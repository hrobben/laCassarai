{% extends 'base.html.twig' %}

{% block title %}Tijden index{% endblock %}

{% block body %}
    <h1>Tijden index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dag</th>
                <th>Begintijd</th>
                <th>Eindtijd</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tijden in tijdens %}
            <tr>
                <td>{{ tijden.id }}</td>
                <td>{{ tijden.dag }}</td>
                <td>{{ tijden.begintijd ? tijden.begintijd|date('H:i:s') : '' }}</td>
                <td>{{ tijden.eindtijd ? tijden.eindtijd|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('tijden_show', {'id': tijden.id}) }}">show</a>
                    <a href="{{ path('tijden_edit', {'id': tijden.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tijden_new') }}">Create new</a>
{% endblock %}
