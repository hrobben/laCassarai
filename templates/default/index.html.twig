{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        {% if role == 'ADMIN' %}
            <h1>Hello {{ controller_name }}! âœ…</h1>

            This friendly message is coming from:
            <ul>
                <li>Your controller at <code><a href="{{ 'src/Controller/DefaultController.php'|file_link(0) }}">src/Controller/DefaultController.php</a></code>
                </li>
                <li>Your template at <code><a href="{{ 'templates/default/index.html.twig'|file_link(0) }}">templates/default/index.html.twig</a></code>
                </li>
            </ul>
        {% elseif role == 'USER' %}
            <h1>Welkom {{ app.user.username }} met email {{ app.user.email }}</h1>
        {% else %}
            <h1>ACCESS DENIED!!!!</h1>
            <h3>U dient zich aan te melden <a class="btn btn-outline-primary"
                                              href="{{ path('fos_user_registration_register') }}">Register</a> nu!</h3>
        {% endif %}

    </div>
{% endblock %}
